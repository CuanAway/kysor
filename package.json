{
  "name": "kaiser",
  "version": "0.0.0",
  "description": "The cosmovisor for KYVE protocol nodes",
  "repository": "git@github.com:kyve-org/kaiser.git",
  "author": "Troy Kessler <troy@kyve.network>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:binaries": "yarn build && rimraf out && pkg package.json",
    "start": "node ./dist/src/index.js"
  },
  "bin": "./dist/src/index.js",
  "pkg": {
    "scripts": "./dist/src/index.js",
    "targets": [
      "latest-linux-x64",
      "latest-macos-x64",
      "latest-win-x64"
    ],
    "outputPath": "out"
  },
  "devDependencies": {
    "@types/node": "^17.0.33",
    "pkg": "^5.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  }
}
